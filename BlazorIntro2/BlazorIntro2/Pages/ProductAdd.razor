@page "/productadd"
@using BlazorIntro2.Models
@using Microsoft.AspNetCore.Components.Forms

<h3>ProductAdd</h3>

<EditForm Model="@productAddModel" OnValidSubmit="@HandleSave">
    <DataAnnotationsValidator />
    @* <ValidationSummary /> *@

    <div class="form-group">
        <InputText Placeholder="Ürün Adı" Class="form-control" Id="productName" @bind-Value="@productAddModel.ProductName" />
        <ValidationMessage For="@(()=>productAddModel.ProductName)"/>
    </div>

    <div class="form-group">
        <InputTextArea Placeholder="Ürün Açıklaması" Class="form-control" Id="Description" @bind-Value="@productAddModel.Description" />
        <ValidationMessage For="@(()=>productAddModel.Description)" />

    </div>
    <div class="form-group">
        <InputSelect Class="form-control" id="categoryId" @bind-Value="@productAddModel.CategoryId">
            <option>Seç</option>
            <option value="1">İçecek</option>
            <option value="2">Yiyecek</option>
        </InputSelect>
        <ValidationMessage For="@(()=>productAddModel.CategoryId)" />

    </div>
    <button class="btn btn-primary" type="submit">Submit</button>


</EditForm>

@code {
    ProductAddModel productAddModel = new ProductAddModel();
    private void HandleSave()
    {
        Console.WriteLine("Ürün eklendi");
    }
}
